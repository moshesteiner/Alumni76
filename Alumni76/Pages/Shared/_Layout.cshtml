                        {
                            loggedSeniors += $"{loggedInSeniors[i].FirstName} {loggedInSeniors[i].LastName},";
                        }
                        loggedSeniors += $"{loggedInSeniors[loggedInSeniors.Count - 1].FirstName} {loggedInSeniors[loggedInSeniors.Count - 1].LastName}";
