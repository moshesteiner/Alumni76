@page
@model CheckPasswordModel
@{
    ViewData["Title"] = "בדיקת סיסמה";
}

<div class="container mt-5" style="direction: rtl; max-width: 500px;">
    <h2>בדיקת תקינות סיסמה</h2>
    @* <h4 class="text-muted">הזן פרטים כדי לוודא שהסיסמה שבידי המשתמש תואמת למערכת.</h4> *@
    <br />
    <br />

    <form method="post" class="card p-4 shadow-sm">
        <div class="mb-3">
            <label class="form-label">כתובת אימייל:</label>
            <input asp-for="Email" class="form-control" placeholder="name@example.com" required />
        </div>
        <div class="mb-3">
            <label class="form-label">סיסמה לבדיקה:</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="הזן סיסמה" required />
        </div>
        <button type="submit" class="btn btn-primary d-block mx-auto">בדוק עכשיו</button>
    </form>

    @if (Model.IsSuccess.HasValue)
    {
        <div class="alert @(Model.IsSuccess.Value ? "alert-success" : "alert-danger") mt-4">
            @Model.ResultMessage
        </div>
    }
</div>
<style>
    .btn-primary {
        font-size: 1.5em!important;
        width:50%;
    }
</style>