@page
@model Bagrut_Eval.Pages.Metrics.ExportMetricsModel
@{
    ViewData["Title"] = "ייצוא מחוון למסמך Word";
}

<div class="container-fluid">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    <div id="ExamSelect" class="d-flex align-items-center mb-5">
        <form method="post" asp-page-handler="SelectExam" class="me-3">
            <div id="ExamSelRight" class="form-group d-flex align-items-center">
                <label asp-for="SelectedExamId" class="me-3 exam-label">בחר בחינה:</label>
                <select asp-for="SelectedExamId" asp-items="Model.AvailableExams" class="form-control" onchange="this.form.submit()">
                    <option value="">-- בחר בחינה --</option>
                </select>
            </div>
            <div id="ExamSelLeft" class="form-group d-flex align-items-center">
                @if (Model.SelectedExamId.HasValue && Model.Metrics.Any())
                {
                    <h3>גיליון נתוני מחוון עבור בחינה: @Model.SelectedExamTitle</h3>
                }               
            </div>
        </form>
    </div>

    <style>
        #ExamSelect form {
            display: flex;
            align-items: center;
            width: 100%;
        }

        #ExamSelRight {
            flex: 2;
        }

        #ExamSelLeft {
            flex: 3;
            margin-right: 25px;
        }

        .exam-label {
            margin-right: 10px;
        }

        .metricsTable th,
        .metricsTable td {
            padding: 8px;
        }
    </style>
    <hr />

    @if (Model.SelectedExamId.HasValue && Model.Metrics.Any())
    {
        @* <div class="d-flex justify-content-end">
            <button type="button" id="exportButton" asp-page-handler="Export" class="btn btn-success m-2">יצוא ל-Word</button>
        </div> *@
        <form method="post" asp-page-handler="Export" id="exportForm">
            <input type="hidden" asp-for="SelectedExamId" />
            <input type="hidden" asp-for="FileName" id="fileNameInput" />

            <button type="button" id="exportButton" asp-page-handler="Export" class="btn btn-success m-2">יצוא ל-Word</button>
            
            <table class="table table-bordered mt-3 metricsTable">
                <thead>
                    <tr>
                        @* <th width="10%">שאלה</th> *@
                        <th width="10%">סעיף</th>
                        <th>תיאור</th>
                        <th width="15%">ניקוד</th>
                        <th width="15%">סוג ניקוד</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var metric in Model.Metrics)
                    {
                        <tr>
                            @* <td>@metric.QuestionNumber</td> *@
                            @* <td>@metric.Part</td> *@
                            <td>@metric.QuestionNumber @metric.Part</td>
                            <td>@metric.RuleDescription</td>
                            <td>@(metric.Score.HasValue? metric.Score.Value + "%" : "-")</td>
                            <td>@metric.ScoreType</td>
                        </tr>
                    }
                </tbody>
            </table>            
        </form>
    }
    else
    {
        <h2>אנא בחר בחינה מהרשימה כדי להציג את נתוני המחוון.</h2>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var defaultFileName = document.getElementById('fileNameInput').value;
            var exportButton = document.getElementById('exportButton');

            if (exportButton) {
                exportButton.addEventListener('click', function(event) {
                    var userFileName = prompt("אנא הזן שם לקובץ:", defaultFileName);

                    if (userFileName === null) {
                        return;
                    }

                    document.getElementById('fileNameInput').value = userFileName || defaultFileName;

                    var form = event.target.closest('form');
                    if (form) {
                        form.submit();
                    }
                });
            }
        });
    </script>
}
