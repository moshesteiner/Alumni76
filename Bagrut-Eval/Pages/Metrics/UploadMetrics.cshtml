@page
@model Bagrut_Eval.Pages.Metrics.UploadMetricsModel // Adjust this namespace if you put it in a subfolder
@{
    ViewData["Title"] = "Upload Exam Metrics";
}

<h1>Upload Exam Metrics</h1>

@* Display messages using TempData *@
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (TempData["WarningMessage"] != null)
{
    <div class="alert alert-warning">@TempData["WarningMessage"]</div>
}

<form method="post" enctype="multipart/form-data">
    @* Antiforgery token is automatically added by <form method="post"> in Razor Pages *@

    <div class="form-group">
        <label asp-for="ExamId">Select Exam:</label>
        <select asp-for="ExamId" class="form-control" required>
            <option value="">-- Select an Exam --</option>
            @if (Model.Exams != null)
            {
                foreach (var exam in Model.Exams)
                {
                    <option value="@exam.Id">@exam.ExamTitle (ID: @exam.Id)</option>
                }
            }
        </select>
        <span asp-validation-for="ExamId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DocxFile">Upload Metrics DOCX File:</label>
        <input type="file" asp-for="DocxFile" class="form-control-file" required>
        <span asp-validation-for="DocxFile" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Upload and Parse</button>
</form>

@* You might also display the parsed metrics here later, for Phase 2 *@