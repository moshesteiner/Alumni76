@page
@model IndexModel
@{
    ViewData["Title"] = "מערכת מעקב מחוון - בגרות " + Model.SubjectTitle;

    var successMessage = TempData["SuccessMessage"] as string;
    var errorMessage = TempData["ErrorMessage"] as string;
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success text-center" role="alert">
        <strong> </strong> @successMessage
    </div>
}
@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger text-center" role="alert">
        <strong> </strong> @errorMessage
    </div>
}


@* Login Section *@

@if (string.IsNullOrEmpty(Model.LoggedInUserName))
{
    @* Display Login Form if no one is logged in *@
    <div class="text-center">
        <br />
        <h2 class="display-5">ברוכים הבאים</h2>
    </div>
    <br />
    <br />
    @if (Model.ShowSubjectSelection)
    {
        @* === NEW: SUBJECT SELECTION FORM (asp-page-handler="SelectSubject") === *@
        <div class="login-section">
            <form method="post" asp-page-handler="SelectSubject">
                <h2 class="mb-4">שלום @Model.userName, &nbspנא לבחור מקצוע</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group row d-flex mb-4">
                    <label class="col-sm-2 col-form-label exam-label">מקצוע:</label>
                    <div class="col-sm-8">
                        @foreach (var subject in Model.UserSubjects!)
                        {
                            <div style="direction:rtl;" class="form-check my-2 rtl-radio-swap">
                                <input class="form-check-input"
                                       type="radio"
                                       id="subject_@subject.Id"
                                       name="@Html.NameFor(m => m.SelectedSubjectId)"
                                       value="@subject.Id"
                                       required
                                       @(Model.UserSubjects.First().Id == subject.Id ? "checked" : "")>
                                <label class="form-check-label" for="subject_@subject.Id">
                                    &nbsp @subject.Title &nbsp
                                </label>
                            </div>                           
                        }
                        <span asp-validation-for="SelectedSubjectId" class="text-danger"></span>
                    </div>
                </div>

                <center>
                    <button type="submit" class="btn btn-primary mt-3">המשך התחברות</button>
                </center>
            </form>
        </div>
    }
    else
    {
        @* === EXISTING: ORIGINAL LOGIN FORM (asp-page-handler="Login") === *@
        <div class="login-section">
            <form id="loginForm" method="post" asp-page-handler="Login">
                @*OnPost*@
                <h2>התחבר למערכת</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="login-section row d-flex mb-3 align-items-center">
                    <label for="email" class="col-sm-2 col-form-label exam-label">אימייל:</label>
                    <div class="col-sm-8">
                        <input type="email" id="email" asp-for="Email" class="form-control" placeholder="הכנס אימייל" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="login-section row d-flex mb-3 align-items-center">
                    <label for="password" class="col-sm-2 col-form-label exam-label">סיסמה:</label>
                    <div class="col-sm-8">
                        <input type="password" id="password" asp-for="Password" class="form-control" placeholder="הכנס סיסמה" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <center><button type="submit" class="btn btn-primary mt-3">התחבר</button></center>
            </form>
        </div>
    }
}
else
{
    <br />
    <br />
    <br />
    <br />
    <div class="login-section">
        <h2>שלום @Model.LoggedInUserName</h2>
        @if (ViewData["lastLoginDate"] != null)
        {
            <br />
            <h4>כניסתך האחרונה הייתה ב: @ViewData["lastLoginDate"]</h4>
        }
    </div>
}
<style>
    /* 1. Ensure the container is a flex container and reverses the visual order */
    .rtl-radio-swap {
        display: flex;
        /* flex-direction: row-reverse; */ /* This is the key: it visually swaps the Input (first) and Label (second) */
        align-items: center; /* Ensures vertical alignment */
        /* Since the overall page is RTL, this results in: [Label] [Input] */
    }

        /* 2. Adjust the margins on the input to create space between the button and the text */
        .rtl-radio-swap .form-check-input {
            /* Remove default LTR spacing */
            margin-right: 0 !important;
            /* Add spacing on the left side of the input (between the input and the label text) */
            margin-left: 0.5rem !important;
        }
</style>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    @* If you had a logout success alert previously and want it back, re-add it here *@
}
